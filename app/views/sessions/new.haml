%h1 Log In
#wood_login
  - form_tag session_path do
    %p
      = label_tag 'login'
      %br/
      = text_field_tag 'login', @login
    %p
      = label_tag 'password'
      %br/
      = password_field_tag 'password', nil
    %p
      = label_tag 'remember_me', 'Remember me'
      = check_box_tag 'remember_me', '1', @remember_me
    %p= submit_tag 'Log in'
    %p= link_to "Sign up", signup_path
    %p= link_to "I forgot my password =(", forgot_password_path

#welcome
  %div{:class => "major_title"}
    .blue Welcome
  %div{:class => "minor_title"}
    .black Unreliable friends or just unreliable memory?
    .blue Let Bill keep tally for you on who owes what.
  .yelly= image_tag "yelly/welcome_clipboard.gif"
