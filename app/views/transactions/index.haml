#user_control_panel
  %canvas#username{:width => "190", :height => "50"}
  = link_to "Log Out", logout_path

#content2
  %div#add_transaction_container
    %h3 Add Transaction
    %div
      = link_to(image_tag("plus-icon-small.png", :border => 0) + " (simple)", :controller => "transactions", :action => "text_add")
    %div
      %a{:href => new_transaction_path}
        = image_tag("plus-icon-small.png", :border => 0)
        (advanced)

  #main_title_and_clip
    %div
      %canvas#bull_clip_main{:width => "70", :height => "68"}
    %div
      %canvas#main_title{:width => "250", :height => "68"}

  %div#transaction_list_container
    %h1 Transactions
    .filler
      %table{:cellpadding => "0", :cellspacing => "0"}
        %tr
          %th Created On
          %th Transaction
          %th Amount
          %th Due
          %th Status
        = render :partial => 'transaction', :collection => @transactions

    #yelly_main
      = image_tag("yelly/half.gif")
