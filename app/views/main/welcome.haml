#main_title_and_clip
  %div
    %canvas#bull_clip_main{:width => "70", :height => "68"}
  %div
    %canvas#main_title{:width => "250", :height => "68"}

#signup
  %h1 Activation Successful!
  %p Welcome to My Mate Bill. Your money tracking issues are but a click away. Please log in below:

  - form_tag session_path do
    .sign_in_inputs
      = label_tag 'login', "User Name"
      = text_field_tag 'login', @login, :class => "text"
    .sign_in_inputs
      = label_tag 'password', "Password"
      = password_field_tag 'password', nil, :class => "text"
    .sign_in_inputs
      = label_tag 'remember_me', 'Remember me'
      = check_box_tag 'remember_me', '1', @remember_me
    .help
      = submit_tag "Login"
      = link_to "Help?", forgot_password_path

:javascript
  function doOnLoadThings() {
    draw_title('#{@title.upcase}'); 
    load_bull_clip_title();
    $('#signup [title]').tipsy({gravity: 'w', trigger: 'focus'});
  }


